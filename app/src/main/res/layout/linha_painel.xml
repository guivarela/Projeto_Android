<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.PainelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp">

        <TextView
            android:id="@+id/vSenha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="RF001"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ltCateg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/vSenha"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vCateg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/vStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aberto"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ltCateg"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/vChegada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:31:20" />

            <TextView
                android:id="@+id/vTempoMedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="00:25:00" />

            <TextView
                android:id="@+id/vAguard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vChegada"
                android:layout_marginLeft="10dp"
                android:text="00:00:00" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>